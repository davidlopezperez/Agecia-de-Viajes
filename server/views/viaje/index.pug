extends ../layout/index
block contenido
    main.container.mt-5
        .row
            each viaje in viajes
                .col-md-5
                    img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, class="img-fluid")
                .col-md-7
                    h1 #{viaje.titulo}
                    p
                        i.fa.fa-calendar-check-o.fa-2x(aria-hidden='true')
                        |   Fecha de ida: #{viaje.fecha_ida} - Fecha de vuelta: #{viaje.fecha_vuelta}
                    p
                        i.fas.fa-dollar-sign
                        | #{viaje.precio}
                    p
                        i.fas.fa-users
                        | #{viaje.disponibles} Disponibles
                        p= viaje.descripcion
                        